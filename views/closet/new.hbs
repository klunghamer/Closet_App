  <form class="new-clothing" method='POST' action='/closet' enctype="multipart/form-data">
    <input type="file" id="file-input">
    <p id="status">Please select a file</p>
    <input type="hidden" id="closet-url" name="closet-url" value="/images/default.png">
    <label for='category'>Category:</label>
    <select name='category'>
      <option value='jacket'>jacket</option>
      <option value='dress'>dress</option>
      <option value='pants'>pants</option>
      <option value='shirt'>shirt</option>
      <option value='shoes'>shoes</option>
      <option value='socks'>socks</option>
      <option value='accessories'>accessories</option>
    </select>
    <label for='brand'>Brand:</label>
    <input name='brand'>
    <label for='color'>Color:</label>
    <input name='color'><br>
    <label for='size'>Size:</label>
    <input name='size'>
    <label for='imageURL'>Image URL:</label>
    <input name='imageURL'>
    <input type='submit' value='Yay Clothes!'>
  </form>
</main>

<footer class="stay-bottom">
  <a href="/closet/{{user._id}}">Go back to your closet!</a>
</footer>
